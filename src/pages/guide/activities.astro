---
import MainLayout from "../../layouts/MainLayout.astro"
import '../../styles/main.css'
import '../../styles/tailwind.min.css'


const response = await fetch('https://api.steinhq.com/v1/storages/64113304eced9b09e9c417c9/actividades');
const data = await response.json();

---
<MainLayout>
<div class="after-header-space"></div>
<div class="text-center">
<h1 class="grid place-content-center text-2xl">Actividades</h1></div>
 <div class="container mx-auto">
    <div class="flex flex-wrap mx-4">
 {data.map((dato) => 
            <div class="w-full sm:w-1/2 md:w-1/2 xl:w-1/4 p-4">
        <a href={`/guide/activities/${dato.id}`} class="c-card block bg-white text-black shadow-md hover:shadow-xl rounded-lg overflow-hidden">
        <div class="relative pb-48 bg-black overflow-hidden">
          <img loading="lazy" onerror="this.src='https://cdn.glitch.global/2ce1bdf3-42b3-446e-85fe-626c2b85239a/fallback.png?v=1679115121621'" class="absolute inset-0 h-full w-full object-cover" src={dato.imgURL} alt="">
        </div>
        <div class="p-4"> 
          <h2 class="mt-2 mb-2  font-bold">{dato.nombre}</h2>
          <!--p class="text-sm description">{dato.descripcion}</p-->
          <div class="mt-3 flex items-center">
            <span class="flex items-center">
          </div>
        </div> 
      </a>
      </div>
      )}
    </div>
  </div>
</MainLayout>
