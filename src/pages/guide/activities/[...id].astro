  <div class="center-content">
<h1 translate="no" class="text-2xl center-content p-4">{nombre}</h1>
    <main>
      <a href={imgURL} data-fancybox="gallery"><img loading="lazy" class="lazyload activator" src={imgURL} onerror="this.style.display='none';this.parentNode.style.display='none';"></a>
      <a href={imgURL2} data-fancybox="gallery"><img loading="lazy" class="lazyload activator" src={imgURL2} onerror="this.style.display='none';this.parentNode.style.display='none';"></a>
      
