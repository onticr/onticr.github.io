---
import MainLayout from "../../../layouts/MainLayout.astro"
import "../../../styles/fancybox.css"
import '../../../styles/tailwind.min.css'
import '../../../styles/main.css';







export async function getStaticPaths() {

const response = await fetch('https://api.steinhq.com/v1/storages/64113304eced9b09e9c417c9/actividades');
const data = await response.json();



return data.map(({ id,nombre,	socioCattemi,	descripcion,	ubicacion,	telefono,	email,	website,	servicios,	idiomas,		imgURL,	imgURL2,	gmaps}) => {

return {
params: { id },
props: {nombre,	socioCattemi,	descripcion,	ubicacion,	telefono,	email,	website,	servicios,	idiomas,		imgURL,	imgURL2,	gmaps },
};
});
}

const { id } = Astro.params;
const {nombre,	socioCattemi,	descripcion,	ubicacion,	telefono,	email,	website,	servicios,	idiomas,		imgURL,	imgURL2,	gmaps } = Astro.props;


